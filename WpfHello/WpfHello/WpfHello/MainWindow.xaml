<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="button" Content="Set Name" HorizontalAlignment="Left" Margin="96,84,0,0" VerticalAlignment="Top" Width="90" Height="32" FontSize="16" Click="Button_Click1"/>
        <Button x:Name="button1" Content="Ret Name" HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="90" Click="Button_Click" FontSize="16" Canvas.Left="96" Canvas.Top="171"/>
        <Label x:Name="label" Content="Content" HorizontalAlignment="Left" Margin="262,172,0,0" VerticalAlignment="Top" Width="339" FontSize="16"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="32" Margin="262,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" FontSize="16" TextChanged="textBox_TextChanged"/>
        <Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click" />
        <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
    </Canvas>
</Window>
